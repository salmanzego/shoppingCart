<section>
  <div class="container">
    <div class="row">
      {{#each products}}
      <div class="card col-md-3 m-3 mt-5" style="width: 15rem;">
        <div class="top-img-space d-flex align-items-center" style="height: 15rem;">
          <img src="/product-images/{{this.proId}}.jpg" class="card-img-top" alt="..." >
        </div>
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.description}}</p>
          <p class="card-text">Quantity: {{this.quantity}}</p>
          <p class="card-text">Price: ₹{{this.price}}</p>
          <p class="card-text">Total: ₹{{this.total}}</p>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>